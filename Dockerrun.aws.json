{
  "AWSEBDockerrunVersion":2,
  "containerDefinitions": [
    	{
      		"name": "client",
      		"image": "ecastroaleman/multi-client",
      		"hostname": "client",
      		"essential": false

    	},
    	{
      		"name": "server",
      		"image": "ecastroaleman/multi-server",
      		"hostname": "api",
      		"essential": false
    	},
	{
		"name": "worker",
		"image": "ecastroaleman/multi-worker",
		"hostname": "worker",
		"essential": false

	},
	{
		"name": "nginx",
		"image": "ecastroaleman/multi-nginx",
		"hostname": "nginx",
		"essential": true,
		"portMappings": [
			{
			 "hostPort": 80,
			 "containerPort": 80
			}
		],
		"links": ["client", "server"]
	}

  ]


}


